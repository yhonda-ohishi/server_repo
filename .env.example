# Deployment Mode
DEPLOYMENT_MODE=single
SERVER_HTTP_PORT=8080
SERVER_GRPC_PORT=9090

# Database Configuration
DATABASE_URL=postgres://user:pass@localhost:5432/etcmeisai
DATABASE_MAX_CONNECTIONS=25
DATABASE_IDLE_CONNECTIONS=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# For separate mode - External gRPC services
DATABASE_GRPC_URL=localhost:50051
HANDLERS_GRPC_URL=localhost:50052

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Performance Configuration
MAX_CONNECTIONS_PER_SERVICE=100
REQUEST_TIMEOUT_MS=5000
CACHE_TTL_SECONDS=300

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9091